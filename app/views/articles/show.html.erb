<h1><%= @articles.title %></h1>

<p><%= @articles.body %></p>


<ul>
  <li><%= link_to "Edit", edit_article_path(@articles) %></li>
  <li><%= link_to "Delete", article_path(@articles), method: :delete, data: {confirm: "Are you sure?"} %></li>
</ul>

<h2>Add a comment</h2>
<%= form_with model: [ @articles, @articles.comments.build ] do |form|%>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter%>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_field :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>